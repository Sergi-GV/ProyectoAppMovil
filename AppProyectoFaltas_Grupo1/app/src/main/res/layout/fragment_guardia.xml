<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentGuardia">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="29dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/fGuardia_btnConfirmar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fGuardia_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:text="Fecha" />

                    <TextView
                        android:id="@+id/fGuardia_horas"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:text="Hora(s)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fGuardia_Profesor"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:text="Profesor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fGuardia_aula"
                            android:layout_width="99dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Aula" />

                        <TextView
                            android:id="@+id/fGuardia_grupo"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Grupo" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/fGuardia_chkConfirmada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirmada" />

                <CheckBox
                    android:id="@+id/fGuardia_chkBaja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Baja" />

                <CheckBox
                    android:id="@+id/fGuardia_chkDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DÃ­a Completo" />
            </LinearLayout>

            <TextView
                android:id="@+id/fGuardia_tipoBaja"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Tipo de baja(solo visible si hay baja)" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/fGuardia_motivo"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="Motivo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/fGuardia_Observaciones"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:text="Observaciones" />

        </LinearLayout>

        <Button
            android:id="@+id/fGuardia_btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="224dp"
            android:text="Confirmar Guardia"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>